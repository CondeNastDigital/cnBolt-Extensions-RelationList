{# Page: NavSecondary > Content ... > Edit ^ View related content #}

{% from '@bolt/_sub/_record_list.twig' import record_list as list %}
{% import '@bolt/_macro/_panels.twig' as panels %}

{% extends '@bolt/_base/_page-nav.twig' %}

{% block page_nav 'Content/*' %}

{% block page_title __('general.phrase.related-content') %}

{% block page_subtitle context.name ~ ' â€º ' ~ context.title %}

{% block page_main %}

    {# TODO: add pager
    <div class="row">
        <div class="col-xs-12">
            <h1 class="page-header">
                {% if pager is defined and pager.totalpages > 1 %}
                    <span>
                    {{ __('general.phrase.showing') }} {{ pager.showing_from }} - {{ pager.showing_to }} {{ __('general.phrase.of') }} {{ pager.count }}
                    </span>
                {% endif %}
            </h1>
        </div>
    </div>
                #}

    <div class="row">
        <div class="col-xs-12">
        {% if context.show_contenttype %}
            <div class="col-md-9">
                {{ include('@bolt/relatedto/_toolbar.twig') }}
                {# TODO: add order #}
                {{ list(context.show_contenttype, context.related_content, context.permissions, '') }}
            </div>

            <aside class="col-md-3">
                {{ include('@bolt/relatedto/_panel-actions_relatedto.twig') }}
                {{ panels.lastmodified(context.show_contenttype.slug) }}
                {{ panels.stack(5) }}
            </aside>

        {% else %}

            <div class="col-xs-12">
                {{ __('general.phrase.no-relations-found-bang') }}
            </div>

        {% endif %}
    </div>

{% endblock page_main %}
